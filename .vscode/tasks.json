{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "List All Port",
            "type": "shell",
            "command": "arduino-cli board list",
            "problemMatcher": []
        },
        {
            "label": "Build ESP32-Cam",
            "type": "shell",
            "command": "arduino-cli compile --fqbn esp32:esp32:esp32cam -j 15 --build-path .\\ESP32-Cam\\build \"C:\\Users\\User\\dev\\Arduino\\fyp\\ESP32-Cam\" --verbose",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Build ESP32",
            "type": "shell",
            "command": "arduino-cli compile --fqbn esp32:esp32:esp32 -j 15 --build-path .\\ESP32-Main\\build \"C:\\Users\\User\\dev\\Arduino\\fyp\\ESP32-Main\" --verbose",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Upload ESP32-Cam",
            "type": "shell",
            "command": "arduino-cli upload -p ${input:port} --fqbn esp32:esp32:esp32cam --input-dir .\\ESP32-Cam\\build --verbose",
            "problemMatcher": []
        },
        {
            "label": "Upload ESP32",
            "type": "shell",
            "command": "arduino-cli upload -p ${input:port} --fqbn esp32:esp32:esp32 --input-dir .\\ESP32-Main\\build --verbose",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "port",          // Reference ID
            "type": "promptString",    // Prompt for a string
            "description": "Enter COM port", // Message shown to user
            "default": "COM6"   // Default value if user presses Enter
        }
    ]

}